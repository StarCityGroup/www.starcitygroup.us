---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectList from '../../components/ProjectList.astro';
import { projects } from './projects';

---

<BaseLayout
	title="Projects"
	description="Current projects."
>
  <div class='container'>
    <div class="mb-10">
      <h1 class="text-3xl font-bold mb-2">Current Projects</h1>
      <p class="text-zinc-700 dark:text-zinc-300 text-lg">Links to code, websites, and other materials from our latest, ongoing work around the world.</p>
    </div>
    <ProjectList projects={projects}/>
  </div>
</BaseLayout>
